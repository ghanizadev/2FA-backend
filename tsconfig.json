{
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "./dist",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "typeRoots": ["types", "node_modules/@types"]
  },
  "compileOnSave": true,
  "ts-node": {
      "transpileOnly": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "test/*"]
}